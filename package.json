{
  "name": "cric-live-scrore",
  "displayName": "Cricket Live Score",
  "description": "Live Cricket Score, IPL Score",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cricketScores.showLiveScores",
        "title": "Show Live Cricket Scores"
      },
      {
        "command": "cricketScores.refreshMatches",
        "title": "Refresh Matches",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "cricketScores.pinMatch",
        "title": "pin",
        "icon": {
          "light": "resources/light/pin.svg",
          "dark": "resources/dark/pin.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "liveCricketScores",
          "title": "Live Cricket",
          "icon": "resources/cric.svg"
        }
      ]
    },
    "views": {
      "liveCricketScores": [
        {
          "id": "live-matches",
          "name": "Live Matches"
        },
        {
          "id": "done-upcoming",
          "name": "Done & Upcoming"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "cricketScores.refreshMatches",
          "when": "view == live-matches",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cricketScores.pinMatch",
          "when": "view == live-matches && viewItem == match",
          "group": "inline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "live-matches",
        "contents": "No Live Matches at the moment!"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "eventsource": "^2.0.2"
  }
}
